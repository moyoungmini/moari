<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".activities.MypageActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimenTopLayoutPadding"
        android:paddingBottom="@dimen/dimenTopLayoutPadding"
        >

        <ImageView
            android:id="@+id/review_edit_exit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="@dimen/dimeUserWidthMargin"
            android:src="@drawable/close_img" />

        <TextView
            android:id="@+id/rewview_edit_flag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/noto_light_font"
            android:gravity="center"
            android:text="작성하기"
            android:textColor="@color/colorSearchText"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/review_edit_finish_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right |center_vertical"
            android:onClick="onClick"
            android:paddingRight="@dimen/dimeUserWidthMargin"
            android:src="@drawable/check_img" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBorder" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/review_edit_picture_show_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@color/colorEditText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimeUserWidthMargin"
                    android:paddingTop="@dimen/dimeUserWidthMargin"
                    android:paddingRight="@dimen/dimeUserWidthMargin"
                    android:paddingBottom="@dimen/dimeUserWidthMargin">

                    <ImageView
                        android:id="@+id/review_edit_picture_select_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:src="@drawable/picture_select_img" />

                    <EditText
                        android:id="@+id/review_edit_title_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/edit_review_background"
                        android:fontFamily="@font/noto_light_font"
                        android:gravity="center_horizontal"
                        android:hint="제목"
                        android:includeFontPadding="false"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorBorder"
                        android:textCursorDrawable="@drawable/et_cursor"
                        android:textSize="26sp" />

                    <LinearLayout
                        android:id="@+id/review_edit_rating_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_review_background"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:onClick="onClick"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:id="@+id/review_edit_rating_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rate00_img" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/review_edit_line_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_review_background"
                        android:fontFamily="@font/noto_light_font"
                        android:gravity="center"
                        android:hint="한줄평 (100자)"
                        android:includeFontPadding="false"
                        android:minHeight="120dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorBorder"
                        android:textCursorDrawable="@drawable/et_cursor"
                        android:textSize="17sp" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/review_edit_category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimeUserWidthMargin"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/dimeUserWidthMargin"
                android:onClick="onClick"
                android:text="카테고리 선택"
                android:fontFamily="@font/noto_light_font"
                android:textColor="@color/colorEditText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/review_edit_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimeUserWidthMargin"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/dimeUserWidthMargin"
                android:onClick="onClick"
                android:text="날짜"
                android:fontFamily="@font/noto_light_font"
                android:textColor="@color/colorEditText"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/review_edit_content_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimeUserWidthMargin"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/dimeUserWidthMargin"
                android:background="@drawable/edit_review_background"
                android:fontFamily="@font/noto_light_font"
                android:hint="내용을 써주세요."
                android:includeFontPadding="false"
                android:textColor="@color/colorEditText"
                android:textColorHint="@color/colorEditText"
                android:textCursorDrawable="@drawable/et_cursor"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>