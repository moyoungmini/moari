<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="180dp"
    android:background="@drawable/empty_white_background"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#424242"
        android:lineSpacingExtra="6sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="작성을 취소하시겠습니까?"
        android:fontFamily="@font/noto_light_font"
        android:layout_weight="1"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightBorder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_review_edit_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorEditText"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/noto_light_font"
            android:layout_weight="1"
            android:text="돌아가기"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorLightBorder"/>
        <TextView
            android:id="@+id/dialog_review_edit_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorEditText"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/noto_light_font"
            android:layout_weight="1"
            android:text="네"
            />
    </LinearLayout>

