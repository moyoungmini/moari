<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/empty_white_background"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/dialog_review_album_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@drawable/button_text_dialog_black_selector_background"
        android:gravity="center"
        android:text="앨범에서 가져오기"
        android:fontFamily="@font/noto_light_font"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightBorder"/>
    <TextView
        android:id="@+id/dialog_review_camera_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@drawable/button_text_dialog_black_selector_background"
        android:gravity="center"
        android:fontFamily="@font/noto_light_font"
        android:text="사진 촬영하기"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

</LinearLayout>
