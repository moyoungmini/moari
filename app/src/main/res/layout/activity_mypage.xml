<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".activities.MypageActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimenWidthPadding"
        android:paddingTop="@dimen/dimenHeightPadding"
        android:paddingRight="@dimen/dimenWidthPadding"
        android:paddingBottom="@dimen/dimenHeightPadding">

        <ImageView
            android:id="@+id/mypage_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="onClick"
            android:padding="5dp"
            android:src="@drawable/back_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/noto_light_font"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="계정"
            android:textColor="@color/colorSearchText"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/mypage_check_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right |center_vertical"
            android:onClick="onClick"
            android:padding="5dp"
            android:src="@drawable/check_img" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightBorder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimeUserWidthMargin"
        android:paddingRight="@dimen/dimeUserWidthMargin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/noto_light_font"
            android:includeFontPadding="false"
            android:text="이메일"
            android:textColor="@color/colorEditText"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mypage_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="8dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/noto_light_font"
            android:includeFontPadding="false"
            android:text="닉네임"
            android:textColor="@color/colorEditText"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/mypage_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_et_background"
            android:fontFamily="@font/noto_light_font"
            android:hint="닉네임"
            android:includeFontPadding="false"
            android:inputType="textEmailAddress"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="10.2sp"
            android:paddingLeft="11dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorEditText"
            android:textCursorDrawable="@drawable/et_cursor"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/noto_light_font"
            android:includeFontPadding="false"
            android:text="비밀번호"
            android:textColor="@color/colorEditText"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/mypage_pw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_et_background"
            android:fontFamily="@font/noto_light_font"
            android:hint="6자 이상 입력해 주세요."
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:lineSpacingExtra="10.2sp"
            android:layout_marginTop="8dp"
            android:paddingLeft="11dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorEditText"
            android:textCursorDrawable="@drawable/et_cursor"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/mypage_re_pw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_et_background"
            android:fontFamily="@font/noto_light_font"
            android:hint="비밀번호 확인"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:lineSpacingExtra="10.2sp"
            android:paddingLeft="11dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorEditText"
            android:textCursorDrawable="@drawable/et_cursor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mypage_logout_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/noto_light_font"
            android:includeFontPadding="false"
            android:onClick="onClick"
            android:text="로그아웃"
            android:textColor="@drawable/button_text_black_selector_background"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/mypage_delete_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_light_font"
            android:includeFontPadding="false"
            android:layout_marginTop="20dp"
            android:onClick="onClick"
            android:text="회원탈퇴"
            android:textColor="@drawable/button_text_black_selector_background"
            android:textSize="17sp" />


    </LinearLayout>
</LinearLayout>