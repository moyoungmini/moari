<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="180dp"
    android:background="@drawable/empty_white_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dialog_category_change_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:textCursorDrawable="@drawable/et_cursor"
            android:fontFamily="@font/noto_light_font"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:lineSpacingExtra="6sp"
            android:textColor="#424242"
            android:textSize="17sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightBorder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_category_change_no_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/noto_light_font"
            android:gravity="center_horizontal"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="취소"
            android:textColor="@color/colorEditText"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorLightBorder" />

        <TextView
            android:id="@+id/dialog_category_change_yes_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/noto_light_font"
            android:gravity="center_horizontal"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="확인"
            android:textColor="@color/colorEditText"
            android:textSize="15sp" />
    </LinearLayout>

